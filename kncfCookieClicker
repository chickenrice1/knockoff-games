//----------------------------------------------------------------------------------------------
                    
        document.getElementById('cursor').addEventListener('click', () => {
            if (cookies >= 50) {
                cookies -= 50;
                cursors++;
                setInterval(() => {
                    cookies += 0.1;
                    updateDisplay();
                }, 1000);
                updateDisplay();
            }
        });

        document.getElementById('buy-all-cursors').addEventListener('click', () => {
            while (cookies >= 50) {
                cookies -= 50;
                cursors++;
                setInterval(() => {
                    cookies += 0.1;
                    updateDisplay();
                }, 1000);
            }
            updateDisplay();
        });

        document.getElementById('grandma').addEventListener('click', () => {
