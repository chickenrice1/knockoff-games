                setInterval(() => {
                    cookies += 100;
                    updateDisplay();
                }, 1000);
                updateDisplay();
            }
        });

        document.getElementById('buy-all-factories').addEventListener('click', () => {
            while (cookies >= 10000) {
                cookies -= 10000;
                factory++;
                setInterval(() => {
                    cookies += 100;
                    updateDisplay();
                }, 1000);
            }
            updateDisplay();
